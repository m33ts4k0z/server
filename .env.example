# Spacebar docker-compose – copy to .env and adjust
# Docker Compose loads .env from the same directory as docker-compose.yml

# Database (PostgreSQL only)
DATABASE=postgres://${POSTGRES_USER:-spacebar}:${POSTGRES_PASSWORD:-spacebar_password}@127.0.0.1:${POSTGRES_PORT:-5432}/${POSTGRES_DB:-spacebar}
POSTGRES_USER=spacebar
POSTGRES_PASSWORD=spacebar_password
POSTGRES_DB=spacebar
POSTGRES_PORT=5432

# Persistent data directory: config.json is stored here (host path, bind-mounted).
# Create the directory first; the server will create config.json on first run if missing.
# Examples: ./data  |  /home/you/spacebar-data  |  /mnt/nas/spacebar
SPACEBAR_DATA_PATH=./data

# WebRTC (voice/video) – mediasoup only
WRTC_LIBRARY=@spacebarchat/mediasoup-webrtc
WRTC_PUBLIC_IP=127.0.0.1
WRTC_PORT_MIN=10020
WRTC_PORT_MAX=10100
